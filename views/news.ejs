<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="news content">
                <h2>All News</h2>

                <% if (news.length> 0) { %>
                    <% news.forEach(n=> { %>
                        <a class="single">
                            <h3 class="title">
                                <%= n.title %>
                            </h3>
                            <p class="content">
                                <%= n.content %>
                            </p>
                        </a>
                        <% }) %>
                            <% } else { %>
                                <p>There are no news to display...</p>
                                <% } %>

            </div>

            <%- include("./partials/footer.ejs") %>
    </body>

</html>